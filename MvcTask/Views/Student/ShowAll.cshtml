@model IEnumerable<Student>
<div class="container">
    <div class="row">
        @foreach (var student in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="/css/Images/@student.Img" alt="Student Image" class="card-img-top" style="max-height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">@student.Name</h5>
                        <p class="card-text">ID: @student.Id</p>
                        <p class="card-text">Address: @student.Address</p>
                        <a href="/student/details/@student.Id" class="btn btn-primary">View Details</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
